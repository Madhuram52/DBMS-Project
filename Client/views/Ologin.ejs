<!DOCTYPE html>
<html>

<head>
    <title>Sign Up/Login Page</title>


    <style>
        body {
            background-image: url("https://img.freepik.com/premium-vector/city-skyline-with-cloudy-sunset-sky_104785-581.jpg?w=996");
            background-repeat: no-repeat;
            background-size: 100%;
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
        }

        .container {
            width: 300px;
            margin: 0 auto;
            padding: 40px;
            background-color: #FFDEDE;
            opacity: 80%;
            border-radius: 5px;
            box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.3);
        }

        .form {
            display: flex;
            flex-direction: column;
        }

        h2 {
            text-align: center;
        }

        input {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            padding: 10px;
            background-color: #007bff;
            color: #ffffff;
            border: none;
            cursor: pointer;
        }

        #login-link,
        #signup-link {
            text-align: center;
        }

        #login-link a,
        #signup-link a {
            color: #007bff;
        }
    </style>


</head>

<body>
    <div class="container">

        <form id="login-form" class="form" method="post" action="/Ologin">
            <h2>Login</h2>
            <input name="oid" type="text" id="owner-id" placeholder="Owner ID" required />
            <input name="pasw2" type="password" id="owner-password" placeholder="Password" required />
            <button type="submit">Login</button>
            <p id="signup-link">Don't have an account? <a href="login2" id="signup">Sign Up</a></p>
        </form>
    </div>
    <script>
        var form = document.getElementById('login-form');
        form.addEventListener('submit', function (event) {
            // prevent the form from submitting normally
            event.preventDefault();

            // get the owner ID value from the form
            var ownerID = document.getElementById('owner-id').value;

            // save the owner ID value in session storage
            sessionStorage.setItem('ownerID', ownerID);

            // submit the form
            form.submit();
        });
    </script>

</body>

</html>