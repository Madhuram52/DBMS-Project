<!DOCTYPE html>
<html>

<head>
    <title>Sign Up/Login Page</title>


    <style>
        body {
            background-image: url("https://img.freepik.com/premium-vector/city-skyline-with-cloudy-sunset-sky_104785-581.jpg?w=996");
            background-repeat: no-repeat;
            background-size: 100%;
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
        }

        .container {
            width: 300px;
            margin: 0 auto;
            padding: 40px;
            background-color: #FFDEDE;
            opacity: 80%;
            border-radius: 5px;
            box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.3);
        }

        .form {
            display: flex;
            flex-direction: column;
        }

        h2 {
            text-align: center;
        }

        input {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            padding: 10px;
            background-color: #007bff;
            color: #ffffff;
            border: none;
            cursor: pointer;
        }

        #login-form {
            display: none;
        }

        #login-link,
        #signup-link {
            text-align: center;
        }

        #login-link a,
        #signup-link a {
            color: #007bff;
        }
    </style>

</head>

<body>
    <div class="container">
        <form id="signup-form" class="form" method="post" action="/login2">
            <h2>Sign Up</h2>
            <input type="text" name="owenerid" id="owner-id" placeholder="Owner ID" required />
            <input type="text" name="oname" id="owner-name" placeholder="Name" required />
            <input type="text" name="ophone" id="phone" placeholder="Phone" required />
            <input type="password" name="opasswd" id="owner-password" placeholder="Password" required />
            <button type="submit">Sign Up</button>
            <p id="login-link">Already have an account? <a href="Ologin" id="login">Login</a></p>
        </form>

    </div>

    <script>
        var form = document.getElementById('signup-form');
        form.addEventListener('submit', function (event) {
            // prevent the form from submitting normally
            event.preventDefault();

            // get the owner ID value from the form
            var ownerID = document.getElementById('owner-id').value;

            // save the owner ID value in session storage
            sessionStorage.setItem('ownerID', ownerID);

            // submit the form
            form.submit();
        });
    </script>


</body>

</html>